<h2 class="page-header-text">Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-inline"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs form-group">
  	<%= f.input :firstname, required: true, autofocus: true %>
  	<%= f.input :lastname, required:true %>
    <%= f.input :email, required: true%>
    <%= f.input :password, required: true %>
    <%= f.input :password_confirmation, required: true %>
    <%= f.input :admin, as: :boolean, checked_value: true, unchecked_value: false %>
  </div>
  <br/><br/>
  <div class="form-actions form-group">
    <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>
<br/>
<p>Already signed? <%= render "devise/shared/links" %></p>

