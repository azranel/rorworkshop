<h2 class="page-header-text">Sign in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-inline"}) do |f| %>
  <div class="form-group">
    <%= f.input :email, required: false, autofocus: true, class: "form-control" %>
    <%= f.input :password, required: false, class: "form-control" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
  <br/><br/>
  <div class="form-group">
    <%= f.button :submit, "Sign in", class: "btn btn-primary" %>
  </div>
<% end %>
<br/>
<br/>
<p>Don't have account yet? Forgot your password?</p>
<%= render "devise/shared/links" %>
